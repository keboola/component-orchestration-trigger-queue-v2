{
  "type": "object",
  "title": "Parameters",
  "required": [
    "#kbcToken",
    "kbcUrl",
    "orchestrationId",
    "waitUntilFinish"
  ],
  "properties": {
    "#kbcToken": {
      "type": "string",
      "title": "KBC Storage API token",
      "format": "password",
      "minLength": 1,
      "propertyOrder": 10,
      "description": "<a href=\"https://help.keboola.com/management/project/tokens/\">Keboola API Token</a> with full access to all buckets and components."
    },
    "kbcUrl": {
      "title": "KBC Stack",
      "type": "string",
      "enum": [
        "",
        "eu-central-1.",
        "north-europe.azure.",
        "Custom Stack"
      ],
      "options": {
        "enum_titles": [
          "AWS US East - connection.keboola.com",
          "AWS EU Central - connection.eu-central-1.keboola.com",
          "Azure North Europe - connection.north-europe.azure.keboola.com",
          "Custom Stack"
        ]
      },
      "propertyOrder": 20
    },
    "custom_stack": {
      "title": "Custom Stack",
      "type": "string",
      "propertyOrder": 25,
      "description": "The name of your stack in connection.{CUSTOM_STACK}.keboola.cloud",
      "options": {
        "dependencies": {
          "kbcUrl": "Custom Stack"
        }
      }
    },
    "orchestrationId": {
      "type": "integer",
      "title": "Orchestration ID",
      "propertyOrder": 30,
      "enum": [],
      "format": "select",
      "options": {
        "async": {
          "label": "Re-load orchestrations",
          "action": "list_orchestrations"
        }
      },
      "uniqueItems": true
    },
    "trigger_metadata": {
      "type": "object",
      "format": "grid-strict",
      "title": "Trigger Info",
      "properties": {
        "project_name": {
          "title": "Project Name",
          "type": "string",
          "readOnly": true,
          "propertyOrder": 1,
          "options": {
            "grid_columns": 10
          },
          "enabled": false
        },
        "project_id": {
          "title": "Project ID",
          "readOnly": true,
          "propertyOrder": 3,
          "options": {
            "grid_columns": 2
          },
          "type": "string"
        },
        "orchestration_link": {
          "title": "Orchestration link",
          "readOnly": true,
          "type": "string",
          "options": {
            "grid_columns": 12
          },
          "propertyOrder": 5
        },
        "sync_trigger_metadata": {
          "type": "button",
          "format": "sync-action",
          "options": {
            "async": {
              "label": "Refresh",
              "action": "sync_trigger_metadata"
            }
          },
          "propertyOrder": 10
        }
      }
    },
    "waitUntilFinish": {
      "type": "boolean",
      "format": "checkbox",
      "title": "Wait for job finish and check jobs status",
      "default": false,
      "propertyOrder": 40
    },
    "failOnWarning": {
      "type": "boolean",
      "format": "checkbox",
      "title": "Fail on Warning",
      "default": true,
      "propertyOrder": 45,
      "description": "When checked, the trigger job will fail when the orchestration ends with a warning",
      "options": {
        "dependencies": {
          "waitUntilFinish": true
        }
      }
    },
    "variables": {
      "type": "array",
      "propertyOrder": 50,
      "format": "table",
      "title": "Variables",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Variable",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
  }
}